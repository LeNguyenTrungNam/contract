@page
@model LoginModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container2">
    <h2>Đăng nhập</h2>
    <form class="login-form" method="post">
        <div class="form-group">
            <label class="form-label">Email</label>
            <input asp-for="Input.Email" type="text" class="form-control1" placeholder="john@doe.com" autocomplete="username" aria-required="true">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="form-control-feedback-icon">
                <i class="ph-user-circle text-muted"></i>
            </div>
        </div>
        <div class="form-group">
            <label class="form-label">Password</label>
             <input asp-for="Input.Password" type="password" class="form-control1" placeholder="•••••••••••" autocomplete="current-password" aria-required="true">
             <span asp-validation-for="Input.Email" class="text-danger"></span>
             <div class="form-control-feedback-icon">
                 <i class="ph-lock text-muted"></i>
             </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.RememberMe" class="form-check1">
            <input type="checkbox" name="remember" class="form-check-input" asp-for="Input.RememberMe" />
            <span class="form-check-label">Remember</span>
            </label>
            <a id="forgot-password" asp-page="./ForgotPassword" class="ms-auto">Forgot password?</a>
        </div>
        <button class="subLogin" type="submit">Đăng nhập</button>
    </form>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
